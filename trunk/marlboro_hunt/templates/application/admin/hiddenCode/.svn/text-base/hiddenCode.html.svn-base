
<div class="theContent">
    <div class="theTitle">
        <h2>{$folder} List</h2>
        
		<a href="index.php?s=hiddenCode&act=getletterreport&startdate={$startdate}&enddate={$enddate}" class="btn btn_document"><span>Download XLS</span></a>
        {*}<a href="index.php?s={$folder}&act=add" class="btn btn_pencil"><span>Add {$folder}</span></a>{/*}
    </div><!--contenttitle-->
    <div class="tableoptions">
	   <form>
			<input type="text" name="search" value="{$search}">&nbsp
			<input type="hidden" name="s" value="{$folder}" />
			<input type="hidden" name="cari" value="cari" />
		 
			<span>Date Range</span>
				<input type="text" name="startdate" value="{$startdate}" class="datepicker radius3" />
			<span>s/d</span>
				<input type="text" name="enddate" value="{$enddate}" class="datepicker radius3" />
				<input type="submit" value="cari" class="stdbtn btn_orange" />
		</form>
		
    </div><!--tableoptions-->	
	<div class="tableoptions">        
		<a  class="btn btn2 btn_pink btn_lock" href="index.php?s={$folder}&act=generateform" ><span>Generate Form</span></a>
		<a  class="btn btn2 btn_pink btn_lock" href="index.php?s={$folder}&act=detail" ><span>Hidden Detail</span></a>
	</div>
	<table cellpadding="0" cellspacing="0" border="0" id="table1" class="stdtable">
        <colgroup>
            <col class="con0" style="width: 4%" />
            <col class="con1" />
            <col class="con0" />
            <col class="con1" />
            <col class="con0" />
            <col class="con1" />
        </colgroup>
        <thead>
            <tr>
                <th class="head0">No</th>
                <th class="head0">Mask Code</th>

                <th class="head1">Location</th>
                <th class="head1">Channel</th>
                <th class="head0">Generate Date</th>
				{*}
                <th class="head0">Posted Date</th>
                <th class="head0">Expired Date</th>
               
                <th class="head0">Status</th>
				{/*}
            </tr>
        </thead>
        <tbody>
		{if $code}
            {foreach from=$code key=k item=v}
            <tr>
                <td width="10">{$v.no}&nbsp;</td>
              
                <td>{$v.maskcode}</td>
              
                <td><nobr>{$v.location}</nobr></td>
                <td><nobr>{$v.channel}</nobr></td>
                <td><nobr> {$v.datetime}</nobr></td>
				
				{*}
                <td><nobr> {$v.posted_date}</nobr></td>
                <td><nobr> {$v.expired_date}</nobr></td>
               
				
                <td align="center">
                    {if $v.n_status==0} <span class="orange">Unpublish</span>
                    {elseif $v.n_status==1} <span class="green">Publish</span>
                    {elseif $v.n_status==2} <span class="red">Inactive</span>
                    {else}
                    {/if}
                </td>
                 {/*}
              
            </tr>
            {/foreach}
		{/if}
        </tbody>
    </table>
	<div class="paging">
    	{$paging}
    </div>
</div><!--theContent-->
