
<div class="theContent">
    {if $msg}<div class="notibar msgalert"><p>{$msg}</p></div>{/if}
    <div class="theTitle">
        <h2>Edit {$folder}</h2>
    </div><!--contenttitle-->
    <table cellpadding="0" cellspacing="0" border="0" id="table1" class="stdtable inputable">
        <tbody>
        <form name="cal" method="post" action="" enctype="multipart/form-data" onsubmit="javascript: return validator();">
		 
		 <tr class="head">
                <td ><strong>Module Name</strong></td>
                <td colspan="2"><input type="text" id="description" name="description" style="width:500px;" value="{$description}"/></td>
            </tr>
            <tr class="head">
                <td ><strong>Request ID</strong></td>
                <td colspan="2"><input type="text" name="requestID" id="requestID" style="width:800px" value="{$requestID}" /></td>
            </tr>
            <tr class="head">
                <td ><strong>Module Path</strong></td>
                <td colspan="2"><input type="text" name="plugin_path" id="plugin_path" style="width:500px" value="{$plugin_path}" /></td>
            </tr>
			
			
            <tr class="head">
                <td><strong>Status</strong></td>
                <td colspan="2">
                    <select name="is_enabled" style="width:200px;">
                        <option value="0" {if $is_enabled==0} selected="selected" {/if}>Inactive</option>
                        <option value="1"  {if $is_enabled==1} selected="selected" {/if}>Active</option>
                    </select>
                </td>
            </tr>
      
            <tr>
            <input type="hidden" name="simpan" value="true" />
			<input type="hidden" name="oldrequestID" value="{$requestID}"  />
			<td colspan="3"><input type="submit" value=" Save " class="stdbtn btn_orange">&nbsp;&nbsp; <input type="button" class="stdbtn btn_yellow" value="Cancel" onclick="javascript: window.location.href='index.php?s={$folder}' ;" /></td>
            </tr>
        </form>
        </tbody>
    </table>
   
</div><!--theContent-->
